<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.medbac.carte_fidelite.activity.Compte">

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Nom: "
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:id="@+id/compte_nom"
        android:layout_marginLeft="20dp" />
    <EditText android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/compte_text_nom"
        android:layout_marginLeft="75dp" />


    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Prenom: "
        android:textSize="20dp"
        android:layout_marginTop="80dp"
        android:id="@+id/compte_prenom "
        android:layout_marginLeft="20dp" />
    <EditText android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="20dp"
        android:layout_marginTop="70dp"
        android:id="@+id/compte_text_Prenom"
        android:layout_marginLeft="100dp"
        />


    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Mot de passe: "
        android:textSize="20dp"
        android:layout_marginTop="120dp"
        android:id="@+id/compte_Mot "
        android:layout_marginLeft="20dp" />
    <EditText android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="20dp"
        android:layout_marginTop="110dp"
        android:id="@+id/compte_text_Mot"
        android:layout_marginLeft="150dp"
        />


    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Cin: "
        android:textSize="20dp"
        android:layout_marginTop="160dp"
        android:id="@+id/compte_Cin"
        android:layout_marginLeft="20dp" />
    <EditText android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="20dp"
        android:layout_marginTop="150dp"
        android:id="@+id/compte_text_Cin"
        android:layout_marginLeft="60dp"
        />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Address: "
        android:textSize="20dp"
        android:layout_marginTop="200dp"
        android:id="@+id/compte_Address "
        android:layout_marginLeft="20dp" />
    <EditText android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="20dp"
        android:layout_marginTop="190dp"
        android:id="@+id/compte_text_Address"
        android:layout_marginLeft="105dp"
        />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Code postal: "
        android:textSize="20dp"
        android:layout_marginTop="240dp"
        android:id="@+id/compte_Code "
        android:layout_marginLeft="20dp" />
    <EditText android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="20dp"
        android:layout_marginTop="230dp"
        android:id="@+id/compte_text_Code"
        android:layout_marginLeft="135dp"
        />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Téléphone: "
        android:textSize="20dp"
        android:layout_marginTop="280dp"
        android:id="@+id/compte_Téléphone"
        android:layout_marginLeft="20dp" />
    <EditText android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="20dp"
        android:layout_marginTop="270dp"
        android:id="@+id/compte_text_Téléphone"
        android:layout_marginLeft="125dp"
        />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Mail : "
        android:textSize="20dp"
        android:layout_marginTop="320dp"
        android:id="@+id/compte_Mail "
        android:layout_marginLeft="20dp" />
    <EditText android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="20dp"
        android:layout_marginTop="310dp"
        android:id="@+id/compte_text_Mail"
        android:layout_marginLeft="70dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="modifier compte"
        android:id="@+id/compte_modifier"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/compte_text_Mail"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        />


</RelativeLayout>
