<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >

    <!--  ListRow Left sied Thumbnail image -->


    <!-- Title Of Song-->
    <TextView
        android:id="@+id/title_promotion_enseigne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FFFFFFFFFFFF"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15dip"
        android:textStyle="bold"/>

    <!-- Artist Name -->
    <TextView
        android:id="@+id/title_descr_promo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_promotion_enseigne"
        android:textColor="#343434"
        android:textSize="10dip"
        android:layout_marginTop="5dip"
        android:text="FDDDDDDDDDDDDDDDDDDDDDD ..." />

    <!-- Rightend Duration -->
    <TextView
        android:id="@+id/title_date_deb_promo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="NNNNNNNNNNNNN"
        android:textSize="10dip"
        android:textColor="#10bcc9"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp" />
    <TextView
        android:id="@+id/title_date_fin_promo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="NNNNNNNNNNNNN"
        android:textSize="10dip"
        android:textColor="#10bcc9"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="160dp" />

    <!-- Rightend Arrow -->
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/info_offers" />

</RelativeLayout>