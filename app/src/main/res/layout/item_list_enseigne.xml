<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >

	<!--  ListRow Left sied Thumbnail image -->
	<LinearLayout android:id="@+id/thumbnail_enseigne" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/image_bg" 
	    android:layout_marginRight="5dip"
        android:paddingLeft="50dp"
        android:paddingTop="25dp"
        android:paddingRight="50dp"
        android:paddingBottom="25dp">
        
		<ImageView     
			android:id="@+id/image_item_list_enseigne"
	        android:layout_width="50dip"
	        android:layout_height="50dip"
	        android:src="@drawable/menu_enseigne2"/>
        
	</LinearLayout>
    
	<!-- Title Of nom_commercial-->
    <TextView
        android:id="@+id/title_enseigne_nom_commercial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail_enseigne"
        android:layout_toRightOf="@+id/thumbnail_enseigne"
        android:text="FFFFFFFFFFFF"
        android:textColor="#040404"
        android:typeface="sans" 
        android:textSize="15dip"
        android:textStyle="bold"/>

	<!-- vile Name -->
     <TextView
        android:id="@+id/vil_enseigne"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_enseigne_nom_commercial"
        android:textColor="#343434"
        android:textSize="10dip"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail_enseigne"
        android:text="FDDDDDDDDDDDDDDDDDDDDDD ..." />

	<!-- tell -->
    <TextView
        android:id="@+id/tell_enseugne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="NNNNNNNNNNNNN"
        android:textSize="10dip"
        android:textColor="#10bcc9"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="160dp" />
      
     <!-- Rightend Arrow -->    
     <ImageView android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:src="@drawable/arrow"
     	android:layout_alignParentRight="true"
     	android:layout_centerVertical="true"
         android:id="@+id/list_image_enseugne" />

</RelativeLayout>