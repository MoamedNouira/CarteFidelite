<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.medbac.carte_fidelite.activity.Carte">

    <ImageView
        android:src="@drawable/menu_carte"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button_carte_logo"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/button_carte_add"
        android:background="@drawable/selector_carte_add"
        android:layout_marginTop="180dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajoute Carte"
        android:id="@+id/text_carte_add"
        android:layout_marginTop="285dp"
        android:layout_marginLeft="28dp"
        android:textSize="20dp" />


</RelativeLayout>
